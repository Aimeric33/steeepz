<% workspaces.each do |workspace| %>
  <%= link_to workspace_path(workspace), class: "ws__block" do %>
    <div class="ws__content">
      <h2 class="ws__name"><%= workspace.name %></h2>
      <div class="ws__details">Last update on <%= workspace.updated_at.strftime("%d/%m/%Y") %>&nbsp; Â· &nbsp;<%= workspace.checklists.count %> checklists</div>
    </div>
    <div class="ws__edit button--secondary">
      <i class="bx bx-edit"></i>
    </div>
  <% end %>
<% end %>
