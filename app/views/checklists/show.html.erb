<main class="app__container">
  <header class="app__header">
    <h1><%= @checklist.name %></h1>
    <%= link_to edit_checklist_path(@checklist), class: "button--primary" do %>
      <i class="bx bx-edit"></i>
      Edit
    <% end %>
  </header>
  <div class="app__content">
    <div class="tabs">
      <%= link_to "Completion", "#", class: "tabs__link tabs__link--active" %>
      <%= link_to "Share", "#", class: "tabs__link" %>
      <%= link_to "Settings", "#", class: "tabs__link" %>
      <%= link_to "Integrations", "#", class: "tabs__link" %>
    </div>
  </div>
</main>
